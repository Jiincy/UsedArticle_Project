<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.sky.usedarticle.mapper.FileMapper">


    <insert id="insertFile" parameterType="com.sky.usedarticle.dto.FileDto">
        INSERT INTO image_file (file_id, file_name, product_id)
        VALUES (#{fileId}, #{fileName}, #{productId});
    </insert>

    <select id="getFileById" resultType="com.sky.usedarticle.dto.FileDto">
        SELECT * FROM image_file WHERE file_id = #{fileId}
    </select>

</mapper>
